<nav class="navbar navbar-expand-lg navbar-light default_shadow">
  <div class="container">
    <a class="navbar-brand" href="#" style="font-size: 1.5rem;"><i class="fa fa-home"></i>Funny Movies</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <% if signed_in? %>
      <div style="display: flex; align-items: center">
        <label class="m5">Welcome <%= current_user.email %></label>
        <%= link_to "Share a movie", new_movie_path, class: 'btn btn-primary m5' %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'btn btn-primary m5' %>
      </div>
    <% else %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'my-2 my-lg-0', style: 'display: flex'}) do |f| %>
        <div class="form-group m5">
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Email' %>
        </div>

        <div class="form-group m5">
          <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: 'Password' %>
        </div>

        <div class="form-group m5">
          <%= f.submit  'Login', class: 'btn btn-primary' %>
        </div>

        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign Up", new_registration_path(resource_name), style: 'align-self: center' %><br />
        <% end %>

      <% end %>
    <% end %>

    </div>
  </div>
</nav>